<h2 align="center">All Blog It Bloggers</h2>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
          <li><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> <small>Delete this User</small>'.html_safe, user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all of their articles?" }, class: "trash-user" %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>